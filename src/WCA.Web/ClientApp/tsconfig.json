{
  "compilerOptions": {
    "allowJs": true,
    "moduleResolution": "node",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [ "es7", "dom" ],
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "types": [ "node" ],
    "jsx": "react"
  },
  "exclude": [ "bin", "node_modules" ],
  "atom": { "rewriteTsconfig": false }
}
