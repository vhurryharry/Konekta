@page
@model WCA.Web.Areas.Admin.Pages.IntegrationLinks.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>IntegrationLink</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IntegrationLink.Id" />
            <div class="form-group">
                <label asp-for="IntegrationLink.Title" class="control-label"></label>
                <input asp-for="IntegrationLink.Title" class="form-control" />
                <span asp-validation-for="IntegrationLink.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IntegrationLink.Href" class="control-label"></label>
                <input asp-for="IntegrationLink.Href" class="form-control" />
                <span asp-validation-for="IntegrationLink.Href" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IntegrationLink.OpenInNewWindow" /> @Html.DisplayNameFor(model => model.IntegrationLink.OpenInNewWindow)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IntegrationLink.IsReactLink" /> @Html.DisplayNameFor(model => model.IntegrationLink.IsReactLink)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IntegrationLink.IsBeta" /> @Html.DisplayNameFor(model => model.IntegrationLink.IsBeta)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IntegrationLink.Disabled" /> @Html.DisplayNameFor(model => model.IntegrationLink.Disabled)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="IntegrationLink.ToolTip" class="control-label"></label>
                <input asp-for="IntegrationLink.ToolTip" class="form-control" />
                <span asp-validation-for="IntegrationLink.ToolTip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IntegrationLink.IntegrationId" class="control-label"></label>
                <select asp-for="IntegrationLink.IntegrationId" class="form-control" asp-items="ViewBag.IntegrationId"></select>
                <span asp-validation-for="IntegrationLink.IntegrationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
