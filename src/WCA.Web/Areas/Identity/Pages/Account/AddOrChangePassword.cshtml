@page
@model AddOrChangePasswordModel

@{
    ViewData["Title"] = "Add or Change password";
}

<p>This page allows you to add or change the password on your account.</p>

<br/>

<section>
    <form asp-route-returnurl="@Model.ReturnUrl" method="post" class="form-horizontal">
        <div>
            <div class="form-group">
                <label asp-for="Input.Password" class="col-md-2 control-label"></label>
                <div class="col-md-6">
                    <input asp-for="Input.Password" class="form-control" type="password" data-cy="Input_New_Password"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="col-md-2 control-label">Confirm Password</label>
                <div class="col-md-6">
                    <input asp-for="Input.ConfirmPassword" class="form-control" type="password" data-cy="Input_Confirm_Password"/>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-10">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-2">
                    <button type="submit" class="btn btn-default" data-cy="Set_Button">Set Password</button>
                </div>

                <div class="col-md-2">
                    <button type="button" onclick="location.href=@Model.BackUrl" class="btn btn-default" data-cy="Cancel_Button">Cancel</button>
                </div>
            </div>

        </div>
    </form>
</section>
